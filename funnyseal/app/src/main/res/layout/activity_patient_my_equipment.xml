<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".feature.patientPersonalCenter.PatientMyEquipmentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="我的设备"
        android:id="@+id/tv_patient_equipment_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="700px"
        android:layout_height="10dip"
        android:background="#1E90FF"
        android:id="@+id/vi_patient_equipment_ex"
        android:layout_below="@+id/tv_patient_equipment_title"
        android:layout_marginTop="40px"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="设备名称"
        android:id="@+id/tv_patient_equipment_name"
        android:layout_below="@+id/tv_patient_equipment_title"
        android:layout_marginTop="70px"
        android:layout_alignRight="@+id/tv_patient_equipment_title"
        android:layout_alignEnd="@+id/tv_patient_equipment_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="设备状态"
        android:id="@+id/tv_patient_equipment_state"
        android:layout_below="@+id/tv_patient_equipment_title"
        android:layout_marginTop="70px"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="设备1"
        android:id="@+id/tv_patient_equipment_equit1"
        android:layout_below="@+id/tv_patient_equipment_name"
        android:layout_marginTop="10px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/ib_patient_equipment_add"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_alignTop="@+id/tv_patient_equipment_title"
        android:layout_alignEnd="@+id/tv_patient_equipment_name"
        android:layout_alignRight="@+id/tv_patient_equipment_name"
        android:layout_marginTop="263dp"
        android:background="#1E90FF"
        android:src="@drawable/add" />

    <TextView
        android:id="@+id/tv_patient_equipment_myequip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_patient_equipment_name"
        android:layout_alignEnd="@+id/tv_patient_equipment_name"
        android:layout_alignRight="@+id/tv_patient_equipment_name"
        android:layout_marginTop="4dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_patient_equipment_myequip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_patient_equipment_state"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_patient_equipment_return"
        android:src="@drawable/tx"
        android:background="@null"
        android:layout_above="@+id/vi_patient_equipment_ex"
        android:layout_alignLeft="@+id/vi_patient_equipment_ex"
        android:layout_alignStart="@+id/vi_patient_equipment_ex" />


</RelativeLayout>