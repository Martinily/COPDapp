<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".feature.patientPersonalCenter.PatientMyInfoModifyActivity"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="我的资料"
        android:id="@+id/tv_patient_modify_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="完成"
        android:id="@+id/bt_patient_modify_complete"
        android:background="@null"
        android:layout_alignBottom="@+id/tv_patient_modify_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="头像"
        android:id="@+id/tv_patient_modify_portrait"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_patient_modify_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="姓名"
        android:id="@+id/tv_patient_modify_name"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_patient_modify_portrait"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="性别"
        android:id="@+id/tv_patient_modify_sex"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_patient_modify_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="年龄"
        android:id="@+id/tv_patient_modify_age"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_patient_modify_sex"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="我的账号"
        android:id="@+id/tv_patient_modify_account"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_patient_modify_age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="修改密码"
        android:id="@+id/tv_patient_modify_password"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_patient_modify_account"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="入驻时间"
        android:id="@+id/tv_patient_modify_settlingtime"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_patient_modify_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="所在地"
        android:id="@+id/textView9"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_patient_modify_settlingtime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="小乔"
        android:background="@null"
        android:id="@+id/ed_patient_modify_myname"
        android:layout_alignTop="@+id/tv_patient_modify_name"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="女"
        android:background="@null"
        android:id="@+id/ed_patient_modify_mysex"
        android:layout_alignTop="@+id/tv_patient_modify_sex"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="18"
        android:background="@null"
        android:id="@+id/ed_patient_modify_myage"
        android:layout_alignTop="@+id/tv_patient_modify_age"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="xxxxxxxxxxx"
        android:id="@+id/textView13"
        android:layout_alignTop="@+id/tv_patient_modify_account"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2018-10-13"
        android:id="@+id/tv_patient_modify_mysettlingtime"
        android:layout_alignTop="@+id/tv_patient_modify_settlingtime"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="湖南长沙 "
        android:background="@null"
        android:id="@+id/ed_patient_modify_location"
        android:layout_alignTop="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_patient_modify_return"
        android:src="@drawable/tx"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/tv_patient_modify_portrait"
        android:layout_toLeftOf="@+id/tv_patient_modify_title"
        android:layout_marginRight="200px"
        />

    <ImageView
        android:layout_width="100px"
        android:layout_height="50px"
        android:id="@+id/iv_patient_modify_portrait"
        android:src="@drawable/doctor"
        android:layout_above="@+id/tv_patient_modify_name"
        android:layout_alignLeft="@+id/ed_patient_modify_myname"
        android:layout_alignStart="@+id/ed_patient_modify_myname" />


</RelativeLayout>