<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".feature.patientPersonalCenter.PatientMyDoctorActivity">


    <TextView
        android:id="@+id/tv_patient_doctor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="84dp"
        android:layout_toEndOf="@+id/ib_patient_doctor_return"
        android:text="我的医生"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_patient_doctor_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_patient_doctor_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="医院"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_patient_doctor_post"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_patient_doctor_name"
        android:layout_below="@+id/tv_patient_doctor_hospital"
        android:layout_alignStart="@+id/ib_patient_doctor_return"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="-10dp"
        android:text="职务"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_patient_doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_patient_doctor_portrait"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="用户名"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/iv_patient_doctor_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib_patient_doctor_return"
        android:layout_alignBottom="@+id/tv_patient_doctor"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="44dp"
        android:src="@drawable/doctor" />

    <View
        android:id="@+id/vi_patient_doctor_dx"
        android:layout_width="300px"
        android:layout_height="3dip"
        android:layout_below="@+id/tv_patient_doctor_post"
        android:layout_alignStart="@+id/tv_patient_doctor_title"
        android:layout_alignLeft="@+id/tv_patient_doctor_title"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="22dp"
        android:background="#050505" />

    <View
        android:layout_width="700px"
        android:layout_height="10dip"
        android:background="#1E90FF"
        android:id="@+id/vi_patient_doctor_dxx"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_patient_doctor_return"
        android:src="@drawable/tx"
        android:background="@null"
        android:layout_above="@+id/tv_patient_doctor_hospital"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>