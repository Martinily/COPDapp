<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".feature.patientPersonalCenter.PatientMyDoctorActivity">


    <TextView
        android:id="@+id/tv_patient_doctor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="84dp"
        android:layout_toEndOf="@+id/ib_patient_doctor_return"
        android:text="我的医生"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_patient_doctor_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_patient_doctor_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="医院"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="科室"
        android:id="@+id/tv_patient_doctor_department"
        android:layout_below="@+id/tv_patient_doctor_hospital"
        android:layout_marginTop="10px"
        android:layout_alignLeft="@+id/tv_patient_doctor_hospital"
        android:layout_alignStart="@+id/tv_patient_doctor_hospital" />

    <TextView
        android:id="@+id/tv_patient_doctor_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_patient_doctor_department"
        android:layout_alignStart="@+id/tv_patient_doctor_department"
        android:layout_alignLeft="@+id/tv_patient_doctor_department"
        android:layout_marginTop="5dp"
        android:text="职务"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="用户名"
        android:id="@+id/tv_patient_doctor_name"
        android:layout_alignTop="@+id/tv_patient_doctor_post"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_patient_doctor_portrait"
        android:src="@drawable/doctor"
        android:layout_alignBottom="@+id/tv_patient_doctor_department"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="300px"
        android:layout_height="3dip"
        android:id="@+id/vi_patient_doctor_dx"
        android:background="#050505"
        android:layout_below="@+id/tv_patient_doctor_post"
        android:layout_marginTop="20px"
        android:layout_alignLeft="@+id/tv_patient_doctor_title"
        android:layout_alignStart="@+id/tv_patient_doctor_title" />

    <View
        android:layout_width="700px"
        android:layout_height="10dip"
        android:background="#1E90FF"
        android:id="@+id/vi_patient_doctor_dxx"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5000次"
        android:id="@+id/tv_patient_doctor_number"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/vi_patient_doctor_dxx"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_patient_doctor_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_patient_doctor_number"
        android:layout_alignEnd="@+id/tv_patient_doctor_number"
        android:layout_alignRight="@+id/tv_patient_doctor_number"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="-143dp"
        android:layout_marginRight="-143dp"
        android:text="99.3%"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="98分"
        android:id="@+id/tv_patient_doctor_fraction"
        android:layout_alignTop="@+id/tv_patient_doctor_percentage"
        android:layout_toRightOf="@+id/vi_patient_doctor_dx"
        android:layout_toEndOf="@+id/vi_patient_doctor_dx" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="咨询率"
        android:id="@+id/tv_patient_doctor_consultation"
        android:layout_below="@+id/tv_patient_doctor_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="满意度"
        android:id="@+id/tv_patient_doctor_satisfied"
        android:layout_alignTop="@+id/tv_patient_doctor_consultation"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="同行认可"
        android:id="@+id/tv_patient_doctor_colleague"
        android:layout_alignTop="@+id/tv_patient_doctor_satisfied"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_patient_doctor_settlingtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-7dp"
        android:layout_marginLeft="-7dp"
        android:layout_marginBottom="64dp"
        android:layout_toEndOf="@+id/tv_patient_doctor_consultation"
        android:layout_toRightOf="@+id/tv_patient_doctor_consultation"
        android:text="入驻时间："
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_patient_doctor_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_patient_doctor_settlingtime"
        android:layout_marginStart="143dp"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/tv_patient_doctor_percentage"
        android:layout_toRightOf="@+id/tv_patient_doctor_percentage"
        android:text="时间"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_patient_doctor_return"
        android:src="@drawable/tx"
        android:background="@null"
        android:layout_above="@+id/tv_patient_doctor_hospital"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>