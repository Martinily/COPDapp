<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.health.HealthCenterHistoryActivity">

    <TextView
        android:id="@+id/titleofcentre3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="@string/healthcenter_center3"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Spinner
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleofcentre3">
    </Spinner>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/healthcenter_project1"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/history"
        app:layout_constraintBottom_toTopOf="@id/data1"/>

    <TextView
        android:id="@+id/data1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text=""
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintBottom_toTopOf="@id/text2"/>

    <TextView
        android:id="@+id/unit1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/healthcenter_unit"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/data1"
        app:layout_constraintTop_toBottomOf="@id/text1"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/healthcenter_project2"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data1"
        app:layout_constraintBottom_toTopOf="@id/data2" />

    <TextView
        android:id="@+id/data2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text=""
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintBottom_toTopOf="@id/text3"/>

    <TextView
        android:id="@+id/unit2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/healthcenter_unit"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/data2"
        app:layout_constraintTop_toBottomOf="@id/text2"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/healthcenter_project3"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data2"
        app:layout_constraintBottom_toTopOf="@id/data3"/>

    <TextView
        android:id="@+id/data3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text=""
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3"/>

    <TextView
        android:id="@+id/unit3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/healthcenter_unit"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/data3"
        app:layout_constraintTop_toBottomOf="@id/text3"/>

    <Button
        android:id="@+id/gotocentre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/healthcenter_returnback"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/data3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>