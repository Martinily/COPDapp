<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".feature.patientPersonalCenter.PatientAddEquipmentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="添加设备"
        android:id="@+id/tv_patient_add_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="设备名称"
        android:id="@+id/tv_patient_add_name"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/tv_patient_add_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="设备状态"
        android:id="@+id/tv_patient_add_state"
        android:layout_alignTop="@+id/tv_patient_add_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/ev_patient_add_name"
        android:layout_width="91dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tv_patient_add_name"
        android:layout_marginStart="-45dp"
        android:layout_marginLeft="-45dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/ib_patient_add_return"
        android:layout_toRightOf="@+id/ib_patient_add_return"
        android:hint="设备名称" />

    <EditText
        android:id="@+id/ev_patient_add_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_patient_add_state"
        android:layout_alignStart="@+id/tv_patient_add_state"
        android:layout_alignLeft="@+id/tv_patient_add_state"
        android:layout_marginTop="31dp"
        android:hint="设备状态" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ev_patient_add_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:text="完成"
        android:id="@+id/bt_patient_add_complete"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_patient_add_return"
        android:src="@drawable/tx"
        android:background="@null"
        android:layout_above="@+id/tv_patient_add_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>