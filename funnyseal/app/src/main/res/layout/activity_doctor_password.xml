<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".feature.doctorPersonalCenter.DoctorPasswordActivity">

    <TextView

        android:id="@+id/tv_doctor_change_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="144dp"
        android:text="修改密码"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_doctor_change_oldpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:text="旧密码"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_doctor_change_newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="新密码"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_doctor_change_oldpassword" />

    <TextView
        android:id="@+id/tv_doctor_change_againpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="重复新密码"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_doctor_change_newpassword" />

    <Button
        android:id="@+id/bt_doctor_change_complete"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_marginTop="64dp"
        android:background="#836fff"
        android:text="完成"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_doctor_change_againpassword" />

    <EditText
        android:id="@+id/et_doctor_change_oldpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="56dp"
        android:hint="请输入旧密码"
        android:password="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColorHint="#238745"
        app:layout_constraintStart_toEndOf="@+id/tv_doctor_change_oldpassword"
        app:layout_constraintTop_toBottomOf="@+id/tv_doctor_change_title"
        tools:ignore="Deprecated" />

    <EditText
        android:id="@+id/et_doctor_change_newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="10dp"
        android:hint="请输入新密码"
        android:password="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColorHint="#238745"
        app:layout_constraintStart_toEndOf="@+id/tv_doctor_change_newpassword"
        app:layout_constraintTop_toBottomOf="@+id/et_doctor_change_oldpassword"
        tools:ignore="Deprecated" />

    <EditText
        android:id="@+id/et_doctor_change_againpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:hint="请重复新密码"
        android:password="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColorHint="#238745"
        app:layout_constraintStart_toEndOf="@+id/tv_doctor_change_againpassword"
        app:layout_constraintTop_toBottomOf="@+id/et_doctor_change_newpassword"
        tools:ignore="Deprecated" />

    <ImageButton

        android:id="@+id/ib_doctor_change_return"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="52dp"
        android:background="@null"
        android:src="@drawable/vector_drawable_tx"
        app:layout_constraintBottom_toTopOf="@+id/tv_doctor_change_oldpassword"
        app:layout_constraintEnd_toStartOf="@+id/tv_doctor_change_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
