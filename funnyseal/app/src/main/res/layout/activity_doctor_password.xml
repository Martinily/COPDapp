<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".feature.doctorPersonalCenter.DoctorPasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="修改密码"
        android:id="@+id/tv_doctor_change_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="旧密码"
        android:id="@+id/tv_doctor_change_oldpassword"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/tv_doctor_change_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="新密码"
        android:id="@+id/tv_doctor_change_newpassword"
        android:layout_below="@+id/tv_doctor_change_oldpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="重复新密码"
        android:id="@+id/tv_doctor_change_againpassword"
        android:layout_below="@+id/tv_doctor_change_newpassword"
        android:layout_marginTop="49dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="300px"
        android:layout_height="200px"
        android:text="完成"
        android:id="@+id/bt_doctor_change_complete"
        android:background="#836fff"
        android:layout_below="@+id/tv_doctor_change_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="请输入旧密码"
        android:id="@+id/et_doctor_change_oldpassword"
        android:layout_above="@+id/tv_doctor_change_newpassword"
        android:layout_alignLeft="@+id/tv_doctor_change_title"
        android:layout_alignStart="@+id/tv_doctor_change_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="请输入新密码"
        android:id="@+id/et_doctor_change_newpassword"
        android:layout_alignBottom="@+id/tv_doctor_change_newpassword"
        android:layout_alignLeft="@+id/et_doctor_change_oldpassword"
        android:layout_alignStart="@+id/et_doctor_change_oldpassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="请重复新密码"
        android:id="@+id/et_doctor_change_againpassword"
        android:layout_alignBottom="@+id/tv_doctor_change_againpassword"
        android:layout_alignLeft="@+id/et_doctor_change_newpassword"
        android:layout_alignStart="@+id/et_doctor_change_newpassword" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/ib_doctor_change_return"
        android:background="@null"
        android:src="@drawable/tx"
        android:layout_above="@+id/tv_doctor_change_oldpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
