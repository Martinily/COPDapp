<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".feature.doctorPersonalCenter.DoctorMyInfoActivity">

    <TextView
        android:id="@+id/tv_doctor_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="我的资料"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/bt_doctor_info_changeinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30px"
        android:layout_toRightOf="@id/tv_doctor_info_title"
        android:background="@null"
        android:text="修改信息"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/tv_doctor_info_portrait" />

    <TextView
        android:id="@+id/tv_doctor_info_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_doctor_info_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="头像"
        android:textAppearance="?android:attr/textAppearanceLarge" />



    <TextView
        android:id="@+id/tv_doctor_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_doctor_info_portrait"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:text="姓名"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_doctor_info_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:text="性别"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_mysex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_doctor_info_sex"
        android:layout_centerHorizontal="true"
        android:text="女"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_doctor_info_sex"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:text="年龄"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_doctor_info_age"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:text="我的账号"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_doctor_info_account"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14dp"
        android:text="修改密码"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_settlingtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_doctor_info_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:text="入住时间"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_doctor_info_settlingtime"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:text="所在地"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_doctor_info_name"
        android:layout_centerHorizontal="true"
        android:text="小乔"
        android:textAppearance="?android:attr/textAppearanceLarge" />



    <TextView
        android:id="@+id/tv_doctor_info_myage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/tv_doctor_info_myaccount"
        android:layout_below="@+id/tv_doctor_info_sex"
        android:layout_alignTop="@+id/tv_doctor_info_age"
        android:layout_alignRight="@+id/tv_doctor_info_mysex"
        android:layout_alignEnd="@+id/tv_doctor_info_mysex" />

    <TextView
        android:id="@+id/tv_doctor_info_myaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_doctor_info_account"
        android:layout_centerHorizontal="true"
        android:text="xxxxxxxxxxx"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_mysettlingtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_doctor_info_settlingtime"
        android:layout_centerHorizontal="true"
        android:text="2018-10-13"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_mylocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_doctor_info_location"
        android:layout_centerHorizontal="true"
        android:text="湖南长沙 "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_doctor_info_location"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:text="单位"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_doctor_info_company"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:text="职位"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_mycompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_doctor_info_company"
        android:layout_centerHorizontal="true"
        android:text="xx医院"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_doctor_info_myposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_doctor_info_position"
        android:layout_centerHorizontal="true"
        android:text="专家"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/ib_doctor_info_changepass"
        android:layout_width="33dp"
        android:layout_height="52dp"
        android:layout_below="@+id/bt_doctor_info_changeinfo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="247dp"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="232dp"
        android:layout_toEndOf="@+id/tv_doctor_info_password"
        android:background="@null"
        android:src="@drawable/tm2" />

    <ImageButton
        android:id="@+id/ib_doctor_info_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_doctor_info_portrait"
        android:layout_alignParentTop="true"
        android:layout_marginRight="200px"
        android:layout_toLeftOf="@+id/tv_doctor_info_title"
        android:src="@drawable/tx" />

    <ImageButton
        android:id="@+id/ib_doctor_info_portrait"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:layout_above="@+id/tv_doctor_info_name"
        android:layout_alignEnd="@+id/bt_doctor_info_changeinfo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="-13dp"
        android:layout_marginBottom="-3dp"
        android:background="@null"
        app:srcCompat="@drawable/tm2" />
</RelativeLayout>